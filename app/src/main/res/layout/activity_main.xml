<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing"
        android:id="@+id/startGame"
        android:text="@string/newGameTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing"
        android:layout_gravity="center"
        android:id="@+id/tableLayout">

        <include
            layout="@layout/table_row">
        </include>

        <include
            layout="@layout/table_row">
        </include>

        <include
            layout="@layout/table_row">
        </include>

        <include
            layout="@layout/table_row">
        </include>


    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentPlayerTitle"
        android:text="@string/currentPlayerTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_spacing_small"
        />

</LinearLayout>